<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/black">
    <TextView
        android:id="@+id/dialog_yusuan_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="设置预算"
        android:textColor="@color/white">
    </TextView>
    <EditText
        android:id="@+id/dialog_yusuan_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_yusuan_tv"
        android:hint="预算金额"
        android:textColorHint="@color/grey_707070"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="14sp"
        android:inputType="number"
        android:textColor="@color/blue_03A9F4"
        android:background="@color/black"
        >
        <requestFocus/>
    </EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/dialog_yusuan_et">
        <Button
            android:id="@+id/dialog_yusuan_btn_y"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:text="@string/yes"
            android:textColor="@color/white"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/dialog_btn_bg"
            >
        </Button>
        <Button
            android:id="@+id/dialog_yusuan_btn_n"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:text="@string/no"
            android:background="@drawable/dialog_btn_bg"
            android:textColor="@color/white"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            >
        </Button>
    </LinearLayout>

</RelativeLayout>