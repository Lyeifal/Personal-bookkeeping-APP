<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black_222222">

    <DatePicker
        android:id="@+id/dialog_time_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:spinnersShown="true"
        android:theme="@style/MyDatePickerStyle"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20:18"
            android:textColor="@color/white"
            android:background="@drawable/rounded_rectangle"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/dialog_calendar_btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:textColor="@color/white"
            android:background="@drawable/rounded_rectangle"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id="@+id/dialog_calendar_btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:textColor="@color/white"
            android:background="@drawable/rounded_rectangle"
            android:layout_marginRight="20dp"/>
    </LinearLayout>


</LinearLayout>